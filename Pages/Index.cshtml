@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h2>Eventos da Loja</h2>
<ul>
    @foreach (var evento in Model.Eventos)
    {
        <li><strong>@evento.Titulo:</strong> @evento.Descricao (@evento.DataEvento.ToShortDateString())</li>
    }
</ul>

<h2>Suas Notificações</h2>
<ul>
    @foreach (var notificacao in Model.Notificacoes)
    {
        <li>@notificacao.Mensagem (@notificacao.DataCriacao.ToShortDateString())</li>
    }
</ul>

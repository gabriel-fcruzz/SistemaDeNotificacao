@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>Gerenciar Eventos</h1>

<p>
    <a asp-page="EventCRUD/Create" class="btn btn-primary">Criar Novo Evento</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Data do Evento</th>
            <th>Descrição</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Eventos)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.DataEvento.ToString("dd/MM/yyyy")</td>
                <td>@item.Descricao</td>
                <td>
                    <a asp-page="EventCRUD/Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-page="EventCRUD/Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" style="display:inline;" onsubmit="return confirm('Tem certeza que deseja excluir este evento?');">
                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>